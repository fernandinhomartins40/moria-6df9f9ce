{
  "name": "moria-backend",
  "version": "1.0.0",
  "description": "Backend Node.js + SQLite3 para Moria Peças & Serviços",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "db:reset": "knex migrate:rollback:all && knex migrate:latest && knex seed:run"
  },
  "keywords": [
    "nodejs",
    "express",
    "sqlite3",
    "knex",
    "api"
  ],
  "author": "Moria Peças & Serviços",
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.2",
    "sqlite3": "^5.1.7",
    "knex": "^3.1.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.4.7",
    "joi": "^17.13.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.9",
    "@types/node": "^22.16.5"
  }
}