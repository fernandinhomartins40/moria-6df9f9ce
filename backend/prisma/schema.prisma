// Moria Peças & Serviços - Schema SQLite Single-Tenant
// Máxima simplicidade - sem tenant_id em lugar nenhum

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================
// PRODUTOS - Peças automotivas
// ============================================
model Product {
  id               Int      @id @default(autoincrement())
  name            String   @map("name")
  description     String?  @map("description")
  category        String   @map("category")
  price           Float    @map("price")
  salePrice       Float?   @map("sale_price")     // Preço promocional
  promoPrice      Float?   @map("promo_price")    // Preço com desconto
  images          String?  @map("images")         // JSON array de URLs
  stock           Int      @default(0) @map("stock")
  minStock        Int      @default(5) @map("min_stock")  // Estoque mínimo
  sku             String?  @map("sku")            // Código do produto
  brand           String?  @map("brand")          // Marca
  supplier        String?  @map("supplier")       // Fornecedor
  isActive        Boolean  @default(true) @map("is_active")
  rating          Float    @default(0) @map("rating")
  specifications  String?  @map("specifications") // JSON object
  vehicleCompatibility String? @map("vehicle_compatibility") // JSON array
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Índices para performance
  @@index([category])
  @@index([isActive])
  @@index([name])
  @@index([sku])
  @@map("products")
}

// ============================================
// SERVIÇOS - Serviços automotivos
// ============================================
model Service {
  id               Int      @id @default(autoincrement())
  name            String   @map("name")
  description     String?  @map("description")
  category        String?  @map("category")
  basePrice       Float?   @map("base_price")
  estimatedTime   String?  @map("estimated_time")  // "30 minutos", "2 horas"
  specifications  String?  @map("specifications")  // JSON object
  isActive        Boolean  @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Índices para performance
  @@index([isActive])
  @@index([name])
  @@map("services")
}

// ============================================
// PEDIDOS - Orders e itens
// ============================================
model Order {
  id              Int         @id @default(autoincrement())
  orderNumber     String      @unique @map("order_number")
  customerName    String      @map("customer_name")
  customerEmail   String      @map("customer_email")
  customerPhone   String?     @map("customer_phone")
  customerAddress String?     @map("customer_address")
  status          String      @default("pending") @map("status") // pending, confirmed, processing, completed, cancelled
  totalAmount     Float       @map("total_amount")
  notes           String?     @map("notes")
  createdAt       DateTime    @default(now()) @map("created_at")
  updatedAt       DateTime    @updatedAt @map("updated_at")
  
  // Relacionamento com itens do pedido
  items           OrderItem[]

  // Índices para performance
  @@index([status])
  @@index([customerEmail])
  @@index([orderNumber])
  @@map("orders")
}

model OrderItem {
  id          Int     @id @default(autoincrement())
  orderId     Int     @map("order_id")
  type        String  @map("type")        // "product" ou "service"
  itemId      Int     @map("item_id")     // ID do produto ou serviço
  itemName    String  @map("item_name")   // Nome para histórico
  quantity    Int     @default(1) @map("quantity")
  unitPrice   Float   @map("unit_price")
  totalPrice  Float   @map("total_price")
  
  // Relacionamento
  order       Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  @@index([orderId])
  @@map("order_items")
}

// ============================================
// PROMOÇÕES E CUPONS
// ============================================
model Promotion {
  id              Int      @id @default(autoincrement())
  title           String   @map("title")
  description     String?  @map("description")
  discountType    String   @map("discount_type")    // "percentage", "fixed_amount"
  discountValue   Float    @map("discount_value")
  category        String?  @map("category")         // Categoria de produtos aplicável
  minAmount       Float?   @map("min_amount")       // Valor mínimo para ativar
  startDate       DateTime @map("start_date")
  endDate         DateTime @map("end_date")
  isActive        Boolean  @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@index([isActive])
  @@index([startDate, endDate])
  @@map("promotions")
}

model Coupon {
  id              Int      @id @default(autoincrement())
  code            String   @unique @map("code")
  description     String?  @map("description")
  discountType    String   @map("discount_type")    // "percentage", "fixed_amount"
  discountValue   Float    @map("discount_value")
  minAmount       Float?   @map("min_amount")
  maxUses         Int?     @map("max_uses")
  usedCount       Int      @default(0) @map("used_count")
  expiresAt       DateTime? @map("expires_at")
  isActive        Boolean  @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@index([code])
  @@index([isActive])
  @@map("coupons")
}

// ============================================
// CONFIGURAÇÕES DA APLICAÇÃO
// ============================================
model AppConfig {
  id          Int      @id @default(autoincrement())
  key         String   @unique @map("key")
  value       String   @map("value")        // JSON string
  description String?  @map("description")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("app_configs")
}
