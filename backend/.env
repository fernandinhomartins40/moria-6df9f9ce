# ============================================
# MORIA PEÇAS & SERVIÇOS - SINGLE TENANT
# ============================================

# Database SQLite (arquivo único por cliente)
DATABASE_URL="file:./prisma/prisma/database.db"

# Environment
NODE_ENV=development
PORT=3082
APP_NAME="Moria Peças & Serviços"
CLIENT_NAME="Desenvolvimento Local"

# CORS - Origem permitida
ALLOWED_ORIGIN=https://yourdomain.com

# Backup automático
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24

# Logs
LOG_LEVEL=info
ENABLE_QUERY_LOGS=true

# ========================================
# OBSERVAÇÕES SINGLE-TENANT:
# - Uma aplicação = um cliente = um banco
# - Arquivo database.db dedicado
# - Sem tenant_id em lugar nenhum
# - Backup simples = copiar arquivo .db
# ========================================