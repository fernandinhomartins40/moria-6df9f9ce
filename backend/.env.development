# ========================================
# CONFIGURAÇÃO DE DESENVOLVIMENTO - MORIA BACKEND
# ========================================

NODE_ENV=development

# Servidor
PORT=3001
HOST=0.0.0.0

# Database
DATABASE_URL=file:./dev.db

# Autenticação
JWT_SECRET=dev-secret-moria-change-in-production-32-chars-minimum
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=dev-session-secret-moria-change-in-production

# CORS
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
LOG_FILE=false
ENABLE_REQUEST_LOGGING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
ENABLE_RATE_LIMITING=false

# Features
ENABLE_CORS=true
ENABLE_COMPRESSION=true

# Uploads
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif

# Application
APP_NAME=Moria Backend
APP_VERSION=1.0.0
APP_DESCRIPTION=Sistema de gestão automotiva
API_PREFIX=/api
API_VERSION=v1