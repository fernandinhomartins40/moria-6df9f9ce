# ========================================
# CONFIGURAÇÃO DE PRODUÇÃO - MORIA BACKEND
# IMPORTANTE: Altere os valores antes de usar em produção!
# ========================================

NODE_ENV=production

# Servidor
PORT=3001
HOST=0.0.0.0

# Database
DATABASE_URL=file:./production.db

# Autenticação (ALTERE ESTES VALORES!)
JWT_SECRET=your-super-secure-jwt-secret-here-minimum-32-characters-required
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=your-super-secure-session-secret-here-minimum-32-characters

# CORS (ALTERE PARA SEU DOMÍNIO!)
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=warn
LOG_FILE=true
ENABLE_REQUEST_LOGGING=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_RATE_LIMITING=true

# Features
ENABLE_CORS=true
ENABLE_COMPRESSION=true

# Uploads
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif

# Redis (para rate limiting distribuído - opcional)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# Application
APP_NAME=Moria Backend
APP_VERSION=1.0.0
APP_DESCRIPTION=Sistema de gestão automotiva
API_PREFIX=/api
API_VERSION=v1