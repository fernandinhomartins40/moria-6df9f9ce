# ========================================
# VARIÁVEIS DE AMBIENTE - MORIA BACKEND
# Copie este arquivo para .env e configure os valores
# ========================================

# Ambiente
NODE_ENV=development

# Servidor
PORT=3001
HOST=0.0.0.0

# Banco de Dados SQLite3
DATABASE_URL=./database/moria.sqlite
DATABASE_PATH=./database/moria.sqlite

# Segurança JWT
JWT_SECRET=sua-chave-secreta-super-segura
JWT_EXPIRES_IN=24h

# CORS - Origens permitidas
CORS_ORIGIN=http://localhost:8080,http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info

# Upload de Arquivos
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Email (para futura implementação)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Configurações da Aplicação
APP_NAME=Moria Peças & Serviços
APP_VERSION=1.0.0

# Seeds e dados iniciais
ADMIN_EMAIL=admin@moria.com.br
ADMIN_PASSWORD=admin123456
ADMIN_NAME=Administrador