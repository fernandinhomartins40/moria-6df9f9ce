# ========================================
# CONFIGURAÇÃO DE TESTE - MORIA BACKEND
# ========================================

NODE_ENV=test

# Servidor
PORT=3002
HOST=0.0.0.0

# Database
DATABASE_URL=file:./test.db

# Autenticação
JWT_SECRET=test-secret-key-for-testing-only-32-chars-minimum
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=10
SESSION_SECRET=test-session-secret-for-testing-only

# CORS
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=error
LOG_FILE=false
ENABLE_REQUEST_LOGGING=false

# Rate Limiting (desabilitado para testes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000
ENABLE_RATE_LIMITING=false

# Features
ENABLE_CORS=true
ENABLE_COMPRESSION=false

# Uploads
UPLOAD_MAX_SIZE=1048576
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png

# Application
APP_NAME=Moria Backend Test
APP_VERSION=1.0.0-test
APP_DESCRIPTION=Sistema de gestão automotiva - Ambiente de Testes
API_PREFIX=/api
API_VERSION=v1